<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp10h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <com.dp.uheadmaster.models.RoundRectCornerImageView
                android:id="@+id/iv_instructor_image"
                android:layout_width="@dimen/dp90h"
                android:layout_height="@dimen/dp90w"
                android:layout_marginStart="@dimen/dp15w"
                android:layout_marginEnd="@dimen/dp4h"
                android:src="@drawable/ic_logo"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/iv_instructor_image">
            <TextView
                android:id="@+id/tv_instructor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Instructor Name" />
            <TextView
                android:id="@+id/tv_instructor_specialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="@color/dark_blue_color"
                android:text="Job Title"
                android:layout_marginTop="@dimen/dp5h"
               />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_instructor_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp15w"
            android:layout_marginEnd="@dimen/dp15w"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp15h"
            android:textSize="@dimen/sp12"
            android:inputType="textMultiLine"
            android:layout_marginBottom="@dimen/dp10h"
            android:text=""
            />
    </LinearLayout>

</ScrollView>