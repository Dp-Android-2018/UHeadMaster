<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40h"
        android:background="@color/colorAccent"
        android:id="@+id/ll_welcome"
        android:gravity="center">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_welcome_message"
            android:layout_marginStart="@dimen/dp10w"
            android:layout_marginEnd="@dimen/dp10w"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="@string/welcome"
            android:textStyle="bold"
            android:textSize="@dimen/sp16"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message_title"
        android:layout_below="@+id/ll_welcome"
        android:layout_marginStart="@dimen/dp10w"
        android:layout_marginEnd="@dimen/dp10w"
        android:textColor="@color/dark_gray_color"
        android:layout_marginTop="@dimen/dp35h"
        android:layout_marginBottom="@dimen/dp15h"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textStyle="bold"
        android:textSize="@dimen/sp14"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40h"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tv_message_title"
        android:background="@android:color/transparent">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_cancel"
            android:text="@string/ok"
            android:textSize="@dimen/sp14"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/colorAccent"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_delete_course"
            android:text="@string/write_review"
            android:textSize="@dimen/sp14"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@color/button_delete_course_color"/>

    </LinearLayout>



</RelativeLayout>