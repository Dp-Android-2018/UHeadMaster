        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10h"
            android:text="@string/email"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/sp16" />

        <EditText
            android:id="@+id/et_user_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:layout_marginTop="@dimen/dp5h"
            android:background="@drawable/profile_edit_text_border"
            android:hint="@string/email"
            android:textSize="@dimen/sp16"
            android:padding="@dimen/dp5w"
            android:textColor="@color/button_mood_gb" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/dp20h"
            android:background="@drawable/btn_no_corner_green"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp100w"
            android:layout_height="@dimen/dp1h"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp40h"
            android:background="@color/gray_btn_bg_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40h"
            android:text="@string/password"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/sp16" />

        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:layout_alignParentBottom="true"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/dp10h"
            android:layout_marginTop="@dimen/dp5h"
            android:background="@drawable/btn_no_corner_green"
            android:text="@string/reset_password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>