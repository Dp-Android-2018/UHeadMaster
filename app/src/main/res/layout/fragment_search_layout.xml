<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_mood_gb">
        <EditText
            android:id="@+id/et_search_keyword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:background="@drawable/edit_text_style"
            android:gravity="start|center_vertical"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:layout_marginStart="@dimen/dp15w"
            android:layout_marginEnd="@dimen/dp15w"
            android:paddingEnd="@dimen/dp10w"
            android:paddingStart="@dimen/dp15w"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textDirection="locale"
            android:textSize="@dimen/sp12"

            android:layout_marginBottom="@dimen/dp10h"/>
    </LinearLayout>
    <include
        android:id="@+id/search_result"
        layout="@layout/fragment_search_result_layout"
        />
</LinearLayout>