<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@color/button_mood_gb">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#ffffff"

            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:id="@+id/toolbar_title"
            android:gravity="center"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="@dimen/dp150w"
            android:layout_height="@dimen/dp150w"
            android:gravity="center"
            android:src="@drawable/ic_logo_toolbar"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_search_white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp15w"
            android:layout_centerVertical="true"
            android:visibility="gone"

           />




    </RelativeLayout>
</android.support.v7.widget.Toolbar>
