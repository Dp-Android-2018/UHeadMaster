<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp3h"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1h"
        android:background="@color/gray_btn_bg_color"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60h"
        android:layout_marginBottom="@dimen/dp5h"
        android:layout_marginTop="@dimen/dp5h"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cart_course"
            android:layout_width="@dimen/dp90w"
            android:layout_height="@dimen/dp60h"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dp5w"
            android:background="@color/gray_btn_bg_color"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/tv_cart_course_title"
            android:layout_width="@dimen/dp150w"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_cart_course"
            android:lines="2"
            android:text="The Web Development \n Boot Camp"
            android:textColor="@color/dark_green_color"
            android:textSize="@dimen/sp11"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_cart_remove"
            android:layout_width="@dimen/dp18w"
            android:layout_height="@dimen/dp18h"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_remove" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp5w"
                android:text="10 $"
                android:textColor="@color/button_mood_gb"
                android:textSize="@dimen/sp10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cart_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp5w"
                android:layout_marginLeft="@dimen/dp3w"
                android:background="@drawable/line_on_textview"
                android:text="10 $"
                android:textColor="@color/cource_old_price"
                android:textSize="@dimen/sp8" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1h"
        android:background="@color/gray_btn_bg_color" />

</LinearLayout>