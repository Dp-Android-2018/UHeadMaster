<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_mood_gb"
   >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_img"
        android:layout_width="@dimen/dp100h"
        android:layout_height="@dimen/dp100w"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="@dimen/dp20h"
        android:layout_marginStart="@dimen/dp10h"
        android:layout_marginEnd="@dimen/dp10h"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sp15"
        android:text="Ahmed Ali"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp10h"
        android:layout_marginStart="@dimen/dp30h"
        android:layout_marginEnd="@dimen/dp30h"
        />

</LinearLayout>