<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dp250w"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10h">

    <RelativeLayout
        android:layout_width="@dimen/dp250w"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_reviewer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ahmed Osama"
            android:textColor="@color/border_gray_color"
            android:layout_alignParentStart="true"/>

        <RatingBar
            android:id="@+id/rating_value"
            android:theme="@style/RatingBar2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_comment_text"
        android:layout_width="@dimen/dp250w"
        android:layout_height="wrap_content"
        android:background="@drawable/review_edit_text_border"
        android:layout_marginTop="@dimen/dp5h"
        android:padding="@dimen/dp5w"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_gravity="top|start"
        android:inputType="textMultiLine"
        android:textSize="@dimen/sp8"
        android:scrollbars="vertical"
        />

</LinearLayout>