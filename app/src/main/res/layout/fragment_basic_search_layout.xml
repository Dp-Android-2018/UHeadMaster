<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_mood_gb"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_search_keyword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:background="@drawable/edit_text_style"
            android:gravity="start|center_vertical"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:layout_marginStart="@dimen/dp15w"
            android:layout_marginEnd="@dimen/dp15w"
            android:paddingEnd="@dimen/dp10w"
            android:paddingStart="@dimen/dp15w"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textDirection="locale"
            android:textSize="@dimen/sp12"

            android:layout_marginBottom="@dimen/dp10h"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:weightSum="2">
           <Button
               android:id="@+id/btn_categories"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@color/button_mood_gb"
               android:textColor="@color/black"
               android:text="@string/categories"
               android:textAllCaps="false"
               />
           <View
               android:layout_width="@dimen/dp1w"
               android:layout_height="@dimen/dp15h"
               android:layout_gravity="center_vertical"
               android:background="@color/black"/>

           <Button
               android:id="@+id/btn_sub_categories"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@color/button_mood_gb"
               android:textColor="@color/black"
               android:text="@string/sub_category"
               android:textAllCaps="false"/>
       </LinearLayout>
</LinearLayout>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    </LinearLayout>


