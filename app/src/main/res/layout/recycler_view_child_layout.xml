<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp5w"
    android:layout_marginEnd="@dimen/dp5w">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp10w"
        android:paddingEnd="@dimen/dp10w"
        android:paddingTop="@dimen/dp5w"
        android:paddingBottom="@dimen/dp5w"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_play_lecture"
            android:layout_width="@dimen/dp15h"
            android:layout_height="@dimen/dp15w"
            android:src="@mipmap/play_button"
            android:tint="@color/black"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_marginStart="@dimen/dp15w"
            android:id="@+id/tv_lecture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text1"
            android:layout_toEndOf="@+id/iv_play_lecture"
            android:textColor="@color/tab_color"
            android:layout_gravity="center"
            android:textSize="@dimen/sp12"
            android:layout_marginEnd="@dimen/dp15w"
           />

        <ImageView
            android:id="@+id/iv_download_lecture"
            android:layout_width="@dimen/dp10h"
            android:layout_height="@dimen/dp10w"
            android:src="@mipmap/downloadbutton"
            android:tint="@color/black"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />

        <Button
            android:layout_width="@dimen/dp80w"
            android:layout_height="@dimen/dp30h"
            android:id="@+id/preview"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:text="@string/preview"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:background="@drawable/transparent_background_colored_border"
            android:visibility="gone"
           />

        <TextView
            android:layout_marginStart="@dimen/dp35w"
            android:layout_marginTop="@dimen/sp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lecture_name"
            android:id="@+id/tv_lecture_type"
            android:textSize="@dimen/sp8"
            android:text="Video"
            android:textColor="@color/tab_color"
            />


        <TextView

            android:layout_toEndOf="@+id/tv_lecture_type"
            android:layout_marginStart="@dimen/dp10w"
            android:layout_marginTop="@dimen/sp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lecture_name"
            android:id="@+id/tv_lecture_duration"
            android:textSize="@dimen/sp8"
            android:text="3:20"
            android:textColor="@color/tab_color"
            />

    </RelativeLayout>



</LinearLayout>