<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


        <CheckBox
            android:id="@+id/ch_box_privcy"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:text="@string/show_my_profile_on_search_engine"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/dp25w"
            android:layout_marginEnd="@dimen/dp25w"
            android:textSize="@dimen/sp12"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp70h"
            />

    <Button
        android:id="@+id/btn_privacy_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40h"
        android:layout_marginTop="@dimen/dp35h"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp10h"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp25w"
        android:layout_marginEnd="@dimen/dp25w"
        android:background="@drawable/btn_no_corner_green"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

</LinearLayout>