<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp2h"
    android:layout_marginStart="@dimen/dp5w"
    android:layout_marginEnd="@dimen/dp5w">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp10w"
        android:background="@color/tab_color">

        <ImageView
            android:layout_marginStart="@dimen/dp5w"
            android:id="@+id/iv_parent_image"
            android:layout_width="@dimen/dp10w"
            android:layout_height="@dimen/dp10w"
            android:src="@drawable/add"
            android:layout_centerVertical="true"/>

        <TextView

            android:layout_marginStart="@dimen/dp5w"
            android:id="@+id/tv_parent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_parent_image"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp14"
            android:text="Hello"
            android:textColor="@color/white"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>