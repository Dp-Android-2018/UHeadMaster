<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp5w"
        android:layout_marginEnd="@dimen/dp5w"
        android:layout_marginTop="@dimen/dp25h">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_transaction_information"
            android:textColor="@color/colorAccent"
             android:textSize="@dimen/sp9"
            android:layout_marginEnd="@dimen/dp5w"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp15w"
        android:text="@string/group_name"
        android:textStyle="bold"
        android:textSize="@dimen/sp15"
        android:textColor="@color/dark_gray_color"
        android:layout_marginTop="@dimen/dp40h"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp15w"
        android:layout_marginEnd="@dimen/dp15w"
        android:layout_marginTop="@dimen/dp5h"

        android:orientation="vertical"
        android:background="@color/open_gray_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp10h"
            android:layout_marginBottom="@dimen/dp20h"
            android:layout_marginStart="@dimen/dp5w"
            android:layout_marginEnd="@dimen/dp5w">
        <EditText
            android:layout_width="@dimen/dp80w"
            android:layout_height="@dimen/dp40h"
            android:background="@drawable/edittext_visa_border"
            android:layout_marginEnd="@dimen/dp5w"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/student_visa_number"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="@dimen/sp14"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp15w"
            android:layout_marginEnd="@dimen/dp15w"
            android:layout_marginTop="@dimen/dp20h"
            android:layout_marginBottom="@dimen/dp15h">

            <Button
                android:id="@+id/btn_update"
                android:layout_width="@dimen/dp120w"
                android:layout_height="@dimen/dp30h"
                android:background="@drawable/button_corner_blue"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:layout_alignParentStart="true"

                />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/dp120w"
                android:layout_height="@dimen/dp30h"
                android:background="@drawable/button_corner_blue"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </LinearLayout>



    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40h"
        android:background="@drawable/btn_no_corner_green"
        android:layout_marginTop="@dimen/dp40h"
        android:text="@string/save"
        android:layout_marginStart="@dimen/dp15w"
        android:layout_marginEnd="@dimen/dp15w"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        android:layout_gravity="center"
        />




</LinearLayout>